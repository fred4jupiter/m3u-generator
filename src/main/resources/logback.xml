<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %p [%c] - %m%n</pattern>
		</encoder>
	</appender>

    <logger name="de.fred4jupiter.m3u" level="INFO"/>

	<root>
		<level value="WARN" />
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>
